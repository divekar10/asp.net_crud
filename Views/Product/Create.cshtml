@model MvcCrud.Models.productMaster

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4 text-md-center">Add New / Update Product </h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <input type="hidden" asp-for="productID"/>
                <label asp-for="productName" class="control-label"></label>
                <input asp-for="productName" class="form-control" />
                <span asp-validation-for="productName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="catID" class="form-control" asp-items="@(new SelectList(ViewBag.CatList, "catID", "catName"))">

                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="ProductList" class="btn btn-outline-success">To See Product List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
